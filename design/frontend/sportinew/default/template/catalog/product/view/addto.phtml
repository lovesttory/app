<?php $_product = $this->getProduct(); ?>
<?php $_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product); ?>

<ul class="add-to-links">
<?php // add to whishlist
 if ($this->helper('wishlist')->isAllow()) : ?>
    <div class="iconContainer"><span class="iconSeparator">
    	<a id="wishlistIcon" class="contactIcon" onmouseover="document.getElementById('wishlistToolTip').style.display = 'block';" onmouseout="document.getElementById('wishlistToolTip').style.display = 'none';" href="<?php echo $_wishlistSubmitUrl ?>" onclick="productAddToCartForm.submitLight(this, '<?php echo $_wishlistSubmitUrl ?>'); return false;"><?php echo $this->__('Add to Wishlist') ?></a>
		</span>
		<div id="wishlistToolTip" class="toolTip"><?php echo $this->__('Add to Wishlist') ?></div>
	</div>
<?php endif; ?>

<?php // add to compare
$_compareUrl = $this->helper('catalog/product_compare')->getAddUrl($_product);
if($_compareUrl) : ?>
	<div class="iconContainer"><span class="iconSeparator">
    	<a id="compareIcon" class="contactIcon" onmouseover="document.getElementById('compareToolTip').style.display = 'block';" onmouseout="document.getElementById('compareToolTip').style.display = 'none';" href="<?php echo $_compareUrl ?>"><?php echo $this->__('Add to Compare') ?></a>
    	</span>
    	<div id="compareToolTip" class="toolTip"><?php echo $this->__('Add to Compare') ?></div>
	</div>
<?php endif; ?>

<?php // email ad un amico
	if ($this->canEmailToFriend()): ?>
	<div class="iconContainer">
    	<a id="friendIcon" class="contactIcon" onmouseover="document.getElementById('friendToolTip').style.display = 'block';" onmouseout="document.getElementById('friendToolTip').style.display = 'none';" href="<?php echo $this->helper('catalog/product')->getEmailToFriendUrl($_product) ?>"><?php echo $this->__('Email to a Friend') ?></a>
		<div id="friendToolTip" class="toolTip"><?php echo $this->__('Email to a Friend') ?></div>
	</div>
<?php endif; ?>
</ul>
