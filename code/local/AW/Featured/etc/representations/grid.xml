<?xml version="1.0" encoding="UTF-8"?>
<representations>
    <grid translate="label">
        <label>Grid</label>
        <version>1.0</version>
        <block>awfeatured/representations_grid_grid</block>
        <css>aw_featured/representations/grid/grid.css</css>
        <js>aw_featured/representations/grid/grid.js</js>
        <options>
            <productsinrow translate="label">
                <label>Products in row</label>
                <input_type>text</input_type>
                <default>3</default>
                <required>1</required>
            </productsinrow>
            <showproductname translate="label">
                <label>Show product name</label>
                <input_type>select</input_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <default>1</default>
                <required>1</required>
            </showproductname>
            <showdetails translate="label">
                <label>Show details</label>
                <input_type>select</input_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <default>0</default>
                <required>1</required>
            </showdetails>
            <showprice translate="label">
                <label>Show price</label>
                <input_type>select</input_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <default>1</default>
                <required>1</required>
            </showprice>
            <showaddtocart translate="label">
                <label>Show "Add to cart" button</label>
                <input_type>select</input_type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
                <default>1</default>
                <required>1</required>
            </showaddtocart>
            <width translate="label">
                <label>Width, px</label>
                <input_type>text</input_type>
                <required>0</required>
            </width>
            <height translate="label">
                <label>Height, px</label>
                <input_type>text</input_type>
                <required>0</required>
            </height>
        </options>
    </grid>
</representations>
