<?xml version="1.0"?>
<!--
/**
 *
 * @category    Amasty
 * @package     Amasty_Menu
 */
-->
<config>
    <sections>
        <ammenu translate="label" module="ammenu">
            <label>Flexible Menu</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<topmenu translate="label">
                    <label>Top menu</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                   
                    <fields>
                        <wheretoshow translate="label">
                            <label>Show In the Top Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ammenu/system_config_top_placement</source_model>                                                         
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </wheretoshow>
                    </fields>                              
                </topmenu>     
                <sidebarmenu translate="label">
                    <label>Sidebar Menu</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                   
                    <fields>
                        <level translate="label">
                            <label>Sidebar Menu Levels</label>
                            <frontend_type>text</frontend_type>                                                        
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </level>
                        <spacer translate="label">
                            <label>Spacer symbol</label>
                            <frontend_type>text</frontend_type>                                                        
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </spacer>
                        <wheretoshow translate="label">
                            <label>Where to show</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ammenu/system_config_sidebar_placement</source_model>                                                         
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </wheretoshow>
                    </fields>                              
                </sidebarmenu>    
                <bottommenu translate="label">
                    <label>Bottom menu</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>                   
                    <fields>
                        <parent translate="label">
                            <label>Parent menu id</label>
                            <frontend_type>text</frontend_type>                                                        
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </parent>
                        <display translate="label">
                            <label>Display bottom menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                                                         
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display>
                    </fields>                              
                </bottommenu>               
            </groups>
        </ammenu>
    </sections>
</config>
