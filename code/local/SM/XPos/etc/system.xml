<?xml version="1.0"?>
<config>
    <sections>
        <xpos>
            <label>X-POS</label>
            <tab>sales</tab>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Please, select Enable if you want to use the xPOS module.</comment>
                        </enabled>
                        <key translate="label">
                            <label>License Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </key>
                        <default_name translate="label">
                            <label>Guest default name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </default_name>                        
                        <order translate="label">
                            <label>Searching order</label>
                            <frontend_type>select</frontend_type>
                            <source_model>xpos/adminhtml_config_search_order</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </order>
                        <storeid translate="label">
                            <label>Store view</label>
                            <frontend_type>select</frontend_type>
                            <source_model>xpos/adminhtml_config_storeview</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Store View for orders in X-POS</comment>
                        </storeid>          
                        <onfly_discount translate="label">
                            <label>On-Fly discount</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable custom price in X-POS.</comment>
                        </onfly_discount>    
                        <lastidvalue translate="label">
                            <label>Last Id </label>
                            <frontend_type>label</frontend_type>
                            <frontend_model>xpos/adminhtml_catalog_product_source</frontend_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </lastidvalue>
                        <resetnumber translate="button_label">
                            <label></label>
                            <button_label>Reset Numbering</button_label>
                            <frontend_model>xpos/adminhtml_system_config_resetnumber</frontend_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </resetnumber>                        
                    </fields>                    
                </general>
                <advanced translate="label">    
                    <label>Advanced</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <search_min_char translate="label">
                            <label>Search minimum char</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Minimum characters must be input before activating the search</comment>
                        </search_min_char>              
                        <offline_mode translate="label">
                            <label>Offline Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Activate 'offline' feature</comment>
                        </offline_mode>                        
                        <data_reload_interval translate="label">
                            <label>Data reload interval</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Interval between data reload requests (in seconds)</comment>
                        </data_reload_interval>  
                        <network_check_interval translate="label">
                            <label>Network check interval</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Interval between network check requests (in seconds)</comment>
                        </network_check_interval>  
                        <cust_per_request translate="label">
                            <label>Customer per request</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Amount of customer records per loading request</comment>
                        </cust_per_request>       
                        <prod_per_request translate="label">
                            <label>Product per request</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Amount of product records per loading request</comment>
                        </prod_per_request>                        
                    </fields>                
                </advanced>
            </groups>
        </xpos>
    </sections>    
</config>
